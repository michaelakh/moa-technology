            <div class='text-center'>
              Wordpress
            </div>
          </div>
          <div class="p-2 btn btn-info tech">
            <div class='text-center'>
              <%= image_tag('drupal', class:'img-fluid tech-icon', style:'width:3.3em;') %>
            </div>
            <div class='text-center'>
              Drupal
            </div>
          </div>
          <div class="p-2 btn btn-info tech">
            <div class='text-center'>
              <%= image_tag('shopify', class:'img-fluid tech-icon') %>
            </div>
            <div class='text-center'>
              Shopify
            </div>
          </div>
        </div>
      </div>
      <div class='box-wrapper'>
        <h3>
          Deployment/Version Control
        </h3>
        <hr>
