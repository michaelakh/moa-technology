            </div>
          </div>
          <div class="p-2 btn btn-light tech">
            <div class='text-center'>
              <%= image_tag('jquery', class:'img-fluid tech-icon d-none d-sm-inline') %>
              <%= image_tag('javascript', class:'img-fluid tech-icon') %>
            </div>
            <div class='text-center'>
              Javascript (Jquery)
            </div>
          </div>
        </div>
        <br>
        <h3>
          Frameworks/Libraries
        </h3>
        <div class="d-flex justify-content-between text-center">
          <div class="p-2 btn btn-light tech">
            <div class='text-center'>
              <%= image_tag('bootstrap', class:'img-fluid tech-icon') %>
            </div>
            <div class='text-center'>
              Bootstrap 3/4
            </div>
          </div>
          <div class="p-2 btn btn-light tech">
            <div class='text-center'>
              <%= image_tag('sass', class:'img-fluid tech-icon') %>
            </div>
            <div class='text-center'>
              SASS
            </div>
          </div>
          <div class="p-2 btn btn-light tech">
            <div class='text-center'>
              <%= image_tag('react', class:'img-fluid tech-icon') %>
            </div>
            <div class='text-center'>
              React/Redux
            </div>
          </div>
