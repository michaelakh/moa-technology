            </div>
          </div>
          <div class="p-2 btn btn-success tech">
            <div class='text-center'>
              <%= image_tag('agile', class:'img-fluid tech-icon w-circle-icon') %>
            </div>
            <div class='text-center'>
              Agile
            </div>
          </div>
          <div class="p-2 btn btn-success tech">
            <div class='text-center'>
