<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :project_title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :summary %>
    <%= form.text_area :summary, id: :project_summary, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, id: :project_tech, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :code_url %>
    <%= form.text_field :code_url, id: :project_tech, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id: :project_image, class:'form-control', placeholder:'upload an image', accept: "image/jpeg, image/jpg, image/gif, image/png" %>
  </div>

  <div class="form-group">
    <%= form.label :tech %>
    <%= form.text_area :tech, id: :project_tech, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :comments %>
    <%= form.text_area :comments, id: :project_comments, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save Project', class:'btn btn-primary' %>
  </div>

<% end %>
